<!-- qr-code-page.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic QR Code Page</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <!-- Add any necessary styles or scripts -->
  <script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>
  <style>

body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
            flex-direction: column;
            justify-content: center;
            display:block;
            align-items: center;
            background-image: url('images/background.jpeg');
            background-repeat: repeat;
            background-size: cover;
            overflow: scroll;    
        }   

        .header {
            background-color: #458bc0;
            color: #fff;
            padding: 10px;
            text-align: center;
            }

       .header span {
            font-size: 24px;
        }
    /* Add this style to your existing styles in the <style> tag */
      #showQRCodeBtn {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    margin-top: 20px; /* Adjust the margin value as needed */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  /* Button hover effect */
  #showQRCodeBtn:hover {
    background-color: #0056b3;
  }

  /* Button hover effect */
  
    #qrCodeDisplay {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 20px;
    }
  
 
    #qrDisplay {
      text-align: center;
      margin-bottom: 10px;
    }
  
    #qrcode {
      font-size: 16px;
      color: #333; /* Text color for the QR code */
    }
  </style>
</head>

<body>
   <div class="header">
        <span>QR CODE </span>
    </div>
  
  <div class="blue-line"></div>

  <div id="qrCodeDisplay">
    <div id="qrDisplay"></div>
    <div id="remainingTime"></div>
    <button id="showQRCodeBtn" onclick="showQRText()">Show QR Code</button>
    <div id="qrcode"></div>
  </div>

  <script>
    const qrCodeDataURL = '<%= qrCodeDataURL %>';
    const randomText = '<%= randomText %>';
    function generateAndDisplayQRCode() {
      // Use the variables passed from the server
      
      updateQRCode(qrCodeDataURL, randomText);
    }

    function updateQRCode(qrCodeDataURL, randomText) {
      const qrDisplay = document.getElementById('qrDisplay');
      qrDisplay.innerHTML = `<img src="${qrCodeDataURL}" alt="QR Code" style="width: auto; height: auto; max-width: 100%; max-height: 100%;" />`;
      const qrcode = document.getElementById('qrcode');
      qrcode.style.width = '128px';
      qrcode.style.height = '128px';
      qrcode.style.marginTop = '10px';
      qrcode.textContent = `${randomText}`;
    }

    function updateRemainingTime(seconds) {
      const remainingTimeDisplay = document.getElementById('remainingTime');
      const minutes = Math.floor(seconds / 60);
      const remainingSeconds = seconds % 60;
      remainingTimeDisplay.textContent = `Remaining Time: ${minutes}:${remainingSeconds < 10 ? '0' : ''}${remainingSeconds}`;
    }

    let timer;
    let seconds = 30;

    function startUpdatingQRCode() {
      generateAndDisplayQRCode(); // Call initially
      showQRText();
      timer = setInterval(function () {
        updateRemainingTime(seconds);
        seconds--;

        if (seconds < 0) {
          clearInterval(timer);
          timer = null;
          seconds = 30;
          startUpdatingQRCode(); // Restart the process
        }
      }, 1000); // Update every second
    }
    let buttonClicked=true;
    function showQRText(){
      const qrcode = document.getElementById('qrcode');
      qrcode.style.display = buttonClicked ? 'none' : 'block';
      buttonClicked = !buttonClicked; // Toggle the state
    }
    // Start the process
    startUpdatingQRCode();
  </script>

</body>

</html>




















