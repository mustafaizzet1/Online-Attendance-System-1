<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic QR Code Page</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
  <!-- QR Code JS Library -->
  <script src="https://cdn.jsdelivr.net/gh/davidshimjs/qrcodejs/qrcode.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
      flex-direction: column;
      justify-content: center;
      display: block;
      align-items: center;
      background-image: url('background.png');
      background-repeat: repeat;
      background-size: cover;
      overflow: scroll;
    }

    .header {
      background-color: #458bc0;
      color: #fff;
      padding: 10px;
      text-align: center;
    }

    .header span {
      font-size: 24px;
    }

    #showQRCodeBtn {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      margin-top: 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    #showQRCodeBtn:hover {
      background-color: #0056b3;
    }

    #qrCodeDisplay {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 20px;
    }

    #qrDisplay {
      text-align: center;
      margin-bottom: 10px;
    }

    #qrcode {
      font-size: 16px;
      color: #333;
    }
    #qrtext{
      margin-top: -1px;
      font-size: 30px;
      font-weight: 700;
      width: 255px;
      border-style:  solid ;
      border-width: 6px;
      border-color:black;
      display: flex;
  justify-content: center; /* ElemanlarÄ± yatayda merkezler */
  align-items: center; 
      

    }
  </style>
</head>

<body>
  <div class="header">
    <span>QR CODE</span>
  </div>

  <div class="blue-line"></div>

  <div id="qrCodeDisplay">
    <div id="qrDisplay"></div>
    <div id="qrcode"></div>
   
    <div id="qrtext"></div>
  </div>
  <div></div>

  <script>
   const urlParams = new URLSearchParams(window.location.search);
  const qrData = urlParams.get('qrData');
  const qrDataParts = qrData.split('/'); // Split the qrData by "/"
  const secondPart = qrDataParts[1]; // Get the second part
    document.getElementById("qrtext").innerText=secondPart
    // Generate and display the QR code
    const qrcode = new QRCode(document.getElementById("qrcode"), {
      text: secondPart,
      width: 256, // Set width and height to make the QR code larger
      height: 256,
      colorDark : "#000000",
      colorLight : "#ffffff",
      correctLevel : QRCode.CorrectLevel.H
    });
  </script>

</body>

</html>